<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyPhone">

    <LinearLayout
        android:id="@+id/otpll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"/>

    </LinearLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/otp_nfl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:transitionName="slogan_trans"
        android:layout_marginTop="10dp"
        app:neomorph_background_color="@color/appTheme"
        app:neomorph_corner_radius="16dp"
        app:neomorph_elevation="9dp"
        app:neomorph_highlight_color="@color/neomorph_highlight_color"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="@android:color/black"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/otpll"
        app:layout_constraintStart_toStartOf="@+id/otpll"
        app:layout_constraintTop_toBottomOf="@+id/otpll"
        app:layout_constraintVertical_bias="0.1">

        <TextView
            android:id="@+id/verifyotp_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Verify OTP"
            android:textSize="18sp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/resendotp_nfl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:transitionName="slogan_trans"
        android:layout_marginTop="10dp"
        app:neomorph_background_color="@color/appTheme"
        app:neomorph_corner_radius="16dp"
        app:neomorph_elevation="9dp"
        app:neomorph_highlight_color="@color/neomorph_highlight_color"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="@android:color/black"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/otp_nfl"
        app:layout_constraintStart_toStartOf="@+id/otp_nfl"
        app:layout_constraintTop_toBottomOf="@+id/otp_nfl"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/resendotp_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Resend OTP"
            android:textSize="18sp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


    <TextView
        android:id="@+id/resendotp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can Regenerate the OTP after 60 Seconds"
        android:textSize="18sp"
        android:padding="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/appTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resendotp_nfl"
        app:layout_constraintStart_toStartOf="@+id/resendotp_nfl"
        app:layout_constraintTop_toBottomOf="@+id/resendotp_nfl"/>
</androidx.constraintlayout.widget.ConstraintLayout>