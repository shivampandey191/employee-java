<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:transitionName="slogan_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neomorph_background_color="@color/appTheme"
        app:neomorph_corner_radius="16dp"
        app:neomorph_elevation="9dp"
        app:neomorph_highlight_color="@color/neomorph_highlight_color"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="@android:color/black"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/paleBlack"
                app:hintTextColor="@color/white"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/position_icon"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:inputType="textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:textColorHint="@color/paleBlack"
                app:hintTextColor="@color/white"
                android:layout_marginBottom="5dp"
                app:boxStrokeColor="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/referredby_icon"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Forgot Password ? Click Here"
                android:textAlignment="textEnd"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:transitionName="slogan_trans"
                app:neomorph_background_color="@color/white"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="9dp"
                app:neomorph_highlight_color="@color/neomorph_highlight_color"
                app:neomorph_layer_type="software"
                android:layout_marginTop="10dp"
                app:neomorph_shadow_color="@android:color/black"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOG IN"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/appTheme"/>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        </LinearLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>